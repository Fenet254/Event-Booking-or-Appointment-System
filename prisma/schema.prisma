generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  location    String?
  startAt     DateTime
  endAt       DateTime
  capacity    Int      @default(0)
  createdAt   DateTime @default(now())
  bookings    Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   Int
  name      String
  email     String
  seats     Int      @default(1)
  createdAt DateTime @default(now())
  status    String   @default("confirmed")
}
